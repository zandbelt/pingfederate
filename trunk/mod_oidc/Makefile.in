
# Source files. mod_auth_mellon.c must be the first file.
SRC=src/mod_oidc.c \
	src/oidc_oauth.c \
	src/oidc_proto.c \
	src/oidc_crypto.c \
	src/oidc_config.c \
	src/oidc_util.c \
	src/oidc_authz.c \
	src/oidc_session.c \
	src/oidc_metadata.c \
	src/apr_json_decode.c \
	src/cache/file.c \
	src/cache/memcache.c \
	src/cache/shm.c

# Files to include when making a .tar.gz-file for distribution
DISTFILES=$(SRC) \
	src/mod_oidc.h \
	src/apr_json.h \
	src/cache/cache.h \
	configure \
	configure.ac \
	Makefile.in \
	autogen.sh \
	README \
	LICENSE.txt \
	ChangeLog


all: src/mod_oidc.la

src/mod_oidc.la: $(SRC) src/mod_oidc.h src/apr_json.h
	@APXS2@ -Wc,"@OPENSSL_CFLAGS@ @CURL_CFLAGS@" -Wl,"@OPENSSL_LIBS@ @CURL_LIBS@" -Wc,-Wall -Wc,-g -c $(SRC)


# Building configure (for distribution)
configure:	configure.ac
	./autogen.sh

@NAMEVER@.tar.gz:	 $(DISTFILES)
	tar -c --transform="s#^#@NAMEVER@/#" -vzf $@ $(DISTFILES)


.PHONY:	install
install: src/mod_oidc.la
	@APXS2@ -i -n mod_oidc src/mod_oidc.la

.PHONY: distfile
distfile:	@NAMEVER@.tar.gz

.PHONY:	clean
clean:
	rm -f src/mod_oidc.la
	rm -f $(SRC:%.c=%.lo)
	rm -f $(SRC:%.c=%.slo)
	rm -rf .libs/

.PHONY:	distclean
distclean:	clean
	rm -f Makefile config.log config.status @NAMEVER@.tar.gz *~ \
	build-stamp config.guess config.sub
	rm -rf debian/mod-oidc
	rm -f debian/files

.PHONY: fullclean
fullclean:	distclean
	rm -f configure aclocal.m4
